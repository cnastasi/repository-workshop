    "mockery/mockery": "1.0.0-alpha1",
    "phpmetrics/phpmetrics": "^2.0",
    "behat/behat": "^3.3"
  },
  "authors": [
    {
      "name": "Christian Nastasi",
      "email": "christian.nastasi@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "config": {
    "bin-dir": "bin"
  },
  "autoload": {
    "psr-4": {
      "": [
        "src/"
      ]
    }
  }
}
